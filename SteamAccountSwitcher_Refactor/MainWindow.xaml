<Window x:Class="SteamAccountSwitcher_Refactor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SteamAccountSwitcher_Refactor"
        mc:Ignorable="d"
        Title="MainWindow" WindowStartupLocation="CenterScreen" SizeToContent="WidthAndHeight" AllowsTransparency="True" WindowStyle="None" Background="#BF0F0F0F" Foreground="#f9f9f9">
	<Window.Resources>
		<local:SolidColorBrushConverter x:Key="SolidColorBrushConverter"/>
	</Window.Resources>
    <Grid>
		<ItemsControl x:Name="grdSteam">
			<ItemsControl.ItemsPanel>
				<ItemsPanelTemplate>
					<WrapPanel/>
				</ItemsPanelTemplate>
			</ItemsControl.ItemsPanel>

			<ItemsControl.ItemTemplate>
				<DataTemplate>
					<StackPanel HorizontalAlignment="Center" Margin="10">
						<Grid>
							<Rectangle Width="70" Height="70" Fill="{Binding Path=MostRecent, Converter={StaticResource SolidColorBrushConverter}}"/>
							<Image Width="64" Height="64" Source="{Binding AvatarUri}" Tag="{Binding SteamID}" MouseLeftButtonUp="Image_MouseLeftButtonUp"/>
						</Grid>
						<TextBlock HorizontalAlignment="Center" Text="{Binding PersonaName}"/>
					</StackPanel>
				</DataTemplate>
			</ItemsControl.ItemTemplate>
		</ItemsControl>
	</Grid>
</Window>
